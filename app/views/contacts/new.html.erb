<h2>Contact Us</h2>

<%= form_with url: contacts_path, method: :post, local: true do |form| %>
  <div>
    <%= form.label :name %><br>
    <%= form.text_field :name, required: true %>
  </div>

  <div>
    <%= form.label :email %><br>
    <%= form.email_field :email, required: true %>
  </div>

  <div>
    <%= form.label :message %><br>
    <%= form.text_area :message, required: true %>
  </div>

  <div>
    <%= form.submit "Send" %>
  </div>
<% end %>

<% if flash[:notice] %>
  <p style="color: green"><%= flash[:notice] %></p>
<% end %>
