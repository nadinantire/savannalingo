<%# Inline styles for better UX and layout %>
<style>
  .notice-message {
    color: #155724;
    background-color: #d4edda;
    border: 1px solid #c3e6cb;
    padding: 12px 16px;
    border-radius: 6px;
    margin: 20px auto;
    max-width: 800px;
    font-weight: 500;
  }

  .post-actions {
    margin-top: 30px;
    text-align: center;
  }

  .post-actions a,
  .post-actions form {
    display: inline-block;
    margin: 0 8px;
  }

  .post-actions .btn {
    background-color: #007bff;
    color: white;
    text-decoration: none;
    padding: 10px 18px;
    border-radius: 6px;
    transition: background-color 0.2s ease;
    border: none;
    font-size: 14px;
  }

  .post-actions .btn:hover {
    background-color: #0056b3;
  }

  .post-actions .btn-danger {
    background-color: #dc3545;
  }

  .post-actions .btn-danger:hover {
    background-color: #b52b3b;
  }
</style>

<% if notice %>
  <p class="notice-message"><%= notice %></p>
<% end %>

<%= render @post %>

<div class="post-actions">
  <%= link_to "✏️ Edit this post", edit_post_path(@post), class: "btn" %>
  <%= link_to "📋 Back to posts", posts_path, class: "btn" %>
  <%= button_to "🗑️ Destroy this post", @post, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>
</div>
