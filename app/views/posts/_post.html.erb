<div id="<%= dom_id post %>">
  <p>
    <strong>Title:</strong>
    <%= post.title %>
  </p>

  <p>
    <strong>Body:</strong>
    <%= post.body %>
  </p>

  <% if post.images.attached? %>
    <h4>Images:</h4>
    <% post.images.each do |image| %>
      <%= image_tag image, style: "max-width: 300px;" %>
    <% end %>
  <% end %>

  <p>
    <strong>Status:</strong>
    <%= post.status %>
  </p>

  <p>
    <strong>Slug:</strong>
    <%= post.slug %>
  </p>

  <p>
    <strong>Published at:</strong>
    <%= post.published_at %>
  </p>

  <p>
    <strong>User:</strong>
    <%= post.user.name %>
  </p>

  <% post.post_content_blocks.each do |block| %>
    <% case block.content_type %>
    <% when "header" %>
      <h2><%= block.content %></h2>
    <% when "paragraph" %>
      <p><%= block.content %></p>
    <% when "image" %>
      <%= image_tag block.image if block.image.attached? %>
    <% end %>
  <% end %>
</div>
