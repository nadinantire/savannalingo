<%# Embedded CSS styles %>
<style>

  .post-card .trix-content {
    background-color: #f9f9f9;
    padding: 12px;
    border-radius: 8px;
    border: 1px solid #eee;
    margin-top: 4px;
    white-space: pre-wrap;
  }
  .trix-content img {
  width: 50%;
  height: 20%;
  object-fit: contain;
}
 /* Blog Layout */
        .blog-layout {
            display: grid;
            grid-template-columns: 2fr 1fr;
            gap: 2rem;
            padding: 3rem 0;
        }
        
        /* Blog Main Content */
        .blog-main {
            display: flex;
            flex-direction: column;
            gap: 2rem;
        }
        
        .blog-post {
            background-color: white;
            border-radius: 10px;
            overflow: hidden;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
        }
        
        .blog-post-img {
            width: 100%;
            height: 300px;
            background-color: var(--light-gray);
            display: flex;
            align-items: center;
            justify-content: center;
        }
        
        .blog-post-content {
            padding: 2rem;
        }
        
        .blog-post-meta {
            display: flex;
            align-items: center;
            gap: 1rem;
            color: var(--gray);
            font-size: 0.9rem;
            margin-bottom: 1rem;
        }
        
        .meta-item {
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }
        
        .blog-post-title {
            font-size: 1.8rem;
            margin-bottom: 1rem;
        }
        
        .blog-post-excerpt {
            margin-bottom: 1.5rem;
        }
        
        .read-more-btn {
            display: inline-block;
            background-color: var(--primary);
            color: white;
            padding: 0.6rem 1.2rem;
            border-radius: 5px;
            font-weight: 600;
            text-decoration: none;
            transition: all 0.3s ease;
        }
        
        .read-more-btn:hover {
            background-color: var(--primary-dark);
        }
        
        /* Pagination */
        .pagination {
            display: flex;
            justify-content: center;
            gap: 0.5rem;
            margin-top: 2rem;
        }
        
        .pagination-item {
            display: flex;
            align-items: center;
            justify-content: center;
            width: 40px;
            height: 40px;
            border-radius: 5px;
            background-color: white;
            color: var(--dark);
            text-decoration: none;
            font-weight: 600;
            transition: all 0.3s ease;
        }
        
        .pagination-item:hover {
            background-color: var(--light-gray);
        }
        
        .pagination-item.active {
            background-color: var(--primary);
            color: white;
        }
        
        /* Sidebar */
        .blog-sidebar {
            display: flex;
            flex-direction: column;
            gap: 2rem;
        }


        .blog-post-img {
            width: 100%;
            height: 200px;
            background-color: var(--light-gray);
            display: flex;
            align-items: center;
            justify-content: center;
            overflow: hidden;
        }

        .blog-post-img img {
            max-width: 100%;
            /* max-height: 100%; */
            object-fit: contain; /* Use 'cover' if you prefer filling without distortion */
        }
        
        .sidebar-widget {
            background-color: white;
            border-radius: 10px;
            padding: 1.5rem;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
        }
        
        .widget-title {
            font-size: 1.3rem;
            margin-bottom: 1.5rem;
            padding-bottom: 0.5rem;
            border-bottom: 2px solid var(--light-gray);
        }
        
        .sidebar-actions {
    display: flex;
    flex-direction: column;
    gap: 10px;
    margin-top: 10px;
  }

  .btn-sidebar-action {
    background-color: #007bff;
    color: white;
    padding: 8px 12px;
    font-size: 13px;
    border: none;
    border-radius: 4px;
    text-decoration: none;
    text-align: center;
    transition: background-color 0.2s ease;
  }

  .btn-sidebar-action:hover {
    background-color: #0056b3;
  }

  .btn-sidebar-action.btn-danger {
    background-color: #dc3545;
  }

  .btn-sidebar-action.btn-danger:hover {
    background-color: #b52b3b;
  }
        
        .categories-list {
            list-style: none;
        }
        
        .categories-list li {
            margin-bottom: 0.8rem;
        }
        
        .categories-list a {
            display: flex;
            justify-content: space-between;
            color: var(--dark);
            text-decoration: none;
            transition: color 0.3s ease;
        }
        
        .categories-list a:hover {
            color: var(--primary);
        }
        
        .category-count {
            background-color: var(--light-gray);
            color: var(--gray);
            font-size: 0.8rem;
            padding: 0.2rem 0.5rem;
            border-radius: 10px;
        }
        
        .popular-posts-list {
            list-style: none;
            display: flex;
            flex-direction: column;
            gap: 1rem;
        }
        
        .popular-post {
            display: flex;
            gap: 1rem;
        }
        
        .popular-post-img {
            flex-shrink: 0;
            width: 70px;
            height: 70px;
            background-color: var(--light-gray);
            border-radius: 5px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 0.8rem;
            color: var(--gray);
            text-align: center;
        }
        
        .popular-post-content {
            display: flex;
            flex-direction: column;
        }
        
        .popular-post-title {
            font-weight: 600;
            margin-bottom: 0.3rem;
        }
        
        .popular-post-date {
            font-size: 0.8rem;
            color: var(--gray);
        }
</style>
 <!-- Blog Banner -->
    <section class="blog-banner">
        <div class="container">
            <h1>Savanna Lingo Posts</h1>
            <p>Insights and expertise on translation, social media marketing, and content creation</p>
        </div>
    </section>

    <!-- Blog Content -->
    <div class="container">
    <div id="<%= dom_id post %>" class="post-card">
        <div class="blog-layout">
            <!-- Main Content -->
            <div class="blog-main">
                <!-- Blog Post 1 -->
                <article class="blog-post">
                    <div class="blog-post-img">
                       <% if post.images.attached? %>
                          <%= image_tag url_for(post.images.first), alt: "Book Cover", class: "book-cover" %>
                        <% end %>
                    </div>
                    <div class="blog-post-content">
                        <div class="blog-post-meta">
                            <div class="meta-item">
                                <span></strong> <%= post.published_at.strftime("%B %d, %Y %I:%M %p") if post.published_at %></span>
                            </div>
                            <div class="meta-item">
                                <span><%= post.user.name %></span>
                            </div>
                            <div class="meta-item">
                                <span><%= post.category.name %></span>
                            </div>
                        </div>
                        <h2 class="blog-post-title"><%= post.title %></h2>
                        <p><%= post.body %></p>
                        <% if current_user&.user_role == 'blogger' %>
                            <%= link_to "Back to posts", posts_path, class: "read-more-btn" %>
                        <% else %>
                            <%= link_to "Back to posts", stories_path, class: "read-more-btn" %>
                        <% end %>
                                                </div>
                </article>
            </div>

            <!-- Sidebar -->
            <aside class="blog-sidebar">
                <!-- Search Widget -->
                <% if user_signed_in? && current_user.user_role == 'blogger' %>
                    <div class="sidebar-widget">
                        <h3 class="widget-title">Actions</h3>
                        <div class="sidebar-actions">
                        <%= link_to "âœï¸ Edit Post", edit_post_path(post), class: "btn-sidebar-action" %>
                        <%= link_to "ðŸ“‹ Back to Posts", posts_path, class: "btn-sidebar-action" %>
                        <%= button_to "ðŸ—‘ï¸ Delete Post", post_path(post), method: :delete, data: { confirm: "Are you sure?" }, class: "btn-sidebar-action btn-danger" %>
                        </div>
                    </div>
                    <% end %>


                <!-- Categories Widget -->
                <div class="sidebar-widget">
                  <h3 class="widget-title">Categories</h3>
                  <ul class="categories-list">
                    <% Category.all.each do |category| %>
                      <% post_count = category.posts.where(user: current_user).count %>
                      <li>
                        <%= link_to "#{category.name} ", category_posts_path(category) %>
                        <span class="category-count"><%= post_count %></span>
                      </li>
                    <% end %>
                  </ul>
                </div>
                <!-- Popular Posts Widget -->
                <div class="sidebar-widget">
                <h3 class="widget-title">Recent Posts</h3>
                <ul class="popular-posts-list">
                    <% @recent_posts.each do |recent| %>
                    <li class="popular-post">
                        <% if recent.images.attached? %>
                        <%= image_tag url_for(recent.images.first), width: "25%", alt: "Post image" %>
                        <% end %>
                        <div class="popular-post-content">
                        <%= link_to recent.title, post_path(recent.slug), class: "popular-post-title" %>
                        <span class="popular-post-date"><%= recent.published_at.strftime("%B %d, %Y") if recent.published_at %></span>
                        </div>
                    </li>
                    <% end %>
                </ul>
                </div>
            </div>
            </aside>
        </div>
    </div>