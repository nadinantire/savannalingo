<%# Page styles %>
<style>
  .post-form {
    max-width: 800px;
    margin: 0 auto;
    background: #ffffff;
    padding: 30px;
    border-radius: 12px;
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.05);
  }

  .post-form h2 {
    color: #d9534f;
    font-size: 1.2rem;
    margin-bottom: 10px;
  }

  .post-form ul {
    color: #d9534f;
    padding-left: 20px;
    margin-bottom: 20px;
  }

  .form-group {
    margin-bottom: 20px;
  }

  .form-group label {
    display: block;
    font-weight: 600;
    margin-bottom: 8px;
    color: #333;
  }

  .form-group input[type="text"],
  .form-group input[type="datetime-local"],
  .form-group textarea,
  .form-group select {
    width: 100%;
    padding: 10px;
    border: 1px solid #ccc;
    border-radius: 6px;
    font-size: 14px;
  }

  .form-group input[type="file"] {
    margin-top: 8px;
  }

  .content-blocks-wrapper {
    margin-top: 30px;
  }

  .add-content-block {
    display: inline-block;
    padding: 10px 18px;
    margin-top: 15px;
    background-color: #17a2b8;
    color: white;
    font-weight: bold;
    border: none;
    border-radius: 6px;
    cursor: pointer;
  }

  .add-content-block:hover {
    background-color: #138496;
  }

  .submit-button {
    background-color: #28a745;
    padding: 12px 24px;
    color: white;
    font-weight: bold;
    border: none;
    border-radius: 6px;
    cursor: pointer;
    display: block;
    margin-top: 30px;
  }

  .submit-button:hover {
    background-color: #218838;
  }
</style>

<%= form_with(model: post, class: "post-form") do |form| %>
  <% if post.errors.any? %>
    <div>
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>
      <ul>
        <% post.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>
  <div class="form-group">
    <%= form.label :category_id, "Select Category" %>
    <%= form.collection_select :category_id, Category.all, :id, :name, prompt: "Choose a category" %>
  </div>

  <div class="form-group">
    <%= form.label :body %>
     <%= form.rich_text_area :body %>
  </div>

  <div class="form-group">
    <%= form.label :images, "Upload Images" %>
    <%= form.file_field :images, multiple: true %>
  </div>

  <%= form.hidden_field :user_id, value: current_user.id %>


  <%= form.submit "âž• Save Post", class: "submit-button" %>
<% end %>
