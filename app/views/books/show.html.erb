<%# Flash notice message %>
<% if notice %>
  <p style="color: #155724; background-color: #d4edda; border: 1px solid #c3e6cb; padding: 10px; border-radius: 5px; margin-bottom: 20px;">
    <%= notice %>
  </p>
<% end %>

<%# Book partial rendered with existing design %>
<%= render @book %>

<%# Button Section %>
<div style="margin-top: 30px; display: flex; justify-content: center; gap: 15px; flex-wrap: wrap;">

  <%= link_to "Edit this book", edit_book_path(@book),
      style: "padding: 10px 16px; background-color: #ffc107; color: black; border-radius: 6px; text-decoration: none; font-weight: bold;" %>

  <%= link_to "Back to books", books_path,
      style: "padding: 10px 16px; background-color: #17a2b8; color: white; border-radius: 6px; text-decoration: none; font-weight: bold;" %>

  <%= button_to "Destroy this book", @book, method: :delete,
      data: { confirm: "Are you sure you want to delete this book?" },
      style: "padding: 10px 16px; background-color: #dc3545; color: white; border-radius: 6px; border: none; font-weight: bold;" %>

</div>
