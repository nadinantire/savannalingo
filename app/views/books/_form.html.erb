<!-- Place this block at the top of your form view (e.g., new.html.erb or edit.html.erb) -->
<style>
  .form-container {
    max-width: 600px;
    margin: 0 auto;
    background: #f9f9f9;
    padding: 30px;
    border-radius: 10px;
    box-shadow: 0 2px 8px rgba(0,0,0,0.1);
  }

  .form-group {
    margin-bottom: 20px;
  }

  .form-label {
    display: block;
    font-weight: bold;
    margin-bottom: 6px;
  }

  .form-input {
    width: 100%;
    padding: 10px;
    border: 1px solid #ccc;
    border-radius: 6px;
  }

  .form-file {
    border: 1px solid #ccc;
    padding: 8px;
    border-radius: 6px;
  }

  .form-submit {
    padding: 12px 24px;
    background-color: #28a745;
    color: white;
    border: none;
    border-radius: 6px;
    font-weight: bold;
    cursor: pointer;
    text-align: center;
  }

  .form-errors {
    color: #721c24;
    background-color: #f8d7da;
    border: 1px solid #f5c6cb;
    padding: 15px;
    border-radius: 8px;
    margin-bottom: 20px;
  }
</style>

<%= form_with(model: book, html: { class: "form-container" }) do |form| %>
  <% if book.errors.any? %>
    <div class="form-errors">
      <h2><%= pluralize(book.errors.count, "error") %> prohibited this book from being saved:</h2>
      <ul>
        <% book.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :title, class: "form-label" %>
    <%= form.text_field :title, class: "form-input" %>
  </div>

  <div class="form-group">
    <%= form.label :writer, class: "form-label" %>
    <%= form.text_field :writer, class: "form-input" %>
  </div>

  <div class="form-group">
    <%= form.label :description, class: "form-label" %>
    <%= form.text_field :description, class: "form-input" %>
  </div>

  <div class="form-group">
    <%= form.label :image, "Upload Book Cover", class: "form-label" %>
    <%= form.file_field :image, class: "form-file" %>
  </div>

  <div class="form-group">
    <%= form.label :pdf, "Upload PDF", class: "form-label" %>
    <%= form.file_field :pdf, class: "form-file" %>
  </div>

  <div class="form-group">
    <%= form.label :price, class: "form-label" %>
    <%= form.text_field :price, class: "form-input" %>
  </div>

  <div style="text-align: center;">
    <%= form.submit "Save Book", class: "form-submit" %>
  </div>
<% end %>
