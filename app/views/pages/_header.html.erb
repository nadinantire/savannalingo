<header>
  <div class="container">
    <nav class="nav-bar">
      <a href="/" class="logo">Savanna Lingo</a>

      <ul class="nav-links">
        <li><%= link_to 'Home', root_path, class: 'active' %></li>
        <li><%= link_to 'Courses', '#' %></li>
        <li><%= link_to 'About', '#' %></li>
        <li><%= link_to 'Contact', '#' %></li>
      </ul>

      <div class="nav-right">
        <% if user_signed_in? %>
          <span class="user-info">Logged in as: <%= current_user.name %> (Role: <%= current_user.user_role %>)</span>
          <%= button_to 'Logout', destroy_user_session_path, method: :delete, data: { turbo: false }, class: 'logout-btn' %>
        <% else %>
          <%= link_to 'Sign Up', new_user_registration_path, class: 'auth-link' %>
          <%= link_to 'Log In', new_user_session_path, class: 'auth-link' %>
        <% end %>
      </div>

      <button class="mobile-menu-btn"><i class="fas fa-bars"></i></button>
    </nav>
  </div>
</header>
