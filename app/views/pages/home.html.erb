        /* Hero Section */
.hero {
    padding: 2rem 0;
    background-color: var(--primary);
    color: white;
    background-image: linear-gradient(135deg, var(--primary) 0%, var(--primary-dark) 100%);
}

.hero-content {
    display: flex;
    flex-direction: row;  /* Use row direction for horizontal alignment */
    gap: 1.5rem;
    align-items: center; /* Center-align vertically */
    max-width: 100%;
}

.hero h1 {
    font-size: 3rem;
    font-weight: 700;
    line-height: 1.2;
}

.hero p {
    font-size: 1.2rem;
    opacity: 0.9;
}

.cta-btn {
    display: inline-block;
    background-color: white;
    color: var(--primary);
    padding: 0.8rem 1.5rem;
    border-radius: 5px;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.3s ease;
    max-width: fit-content;
}

.cta-btn:hover {
    transform: translateY(-3px);
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
}

/* Hero Slider */
.hero-slider {
    position: relative;
    display: flex;
    overflow: hidden;
    justify-content: center; /* Center the content */
}

.hero-slide {
    display: none;
    width: 100%;
    justify-content: center;
    animation: fade 1s ease-in-out;
}

.hero-slide.active {
    display: flex;
}

/* Ensure Image and Text are in separate columns (side by side) */
.hero-slide .hero-img-container {
    width: 50%;
    padding-right: 1.5rem;
}

.hero-slide .hero-text-container {
    width: 50%;
    padding-left: 1.5rem;
    color: white;
}

.hero-img {
    width: 100%;
    height: auto;
    object-fit: cover;
    border-radius: 10px;
}

/* Hero Text Styles */
.hero-text-container h1 {
    font-size: 2.5rem;
    font-weight: bold;
    margin-bottom: 1rem;
}

.hero-text-container p {
    font-size: 1.2rem;
    margin-bottom: 1.5rem;
}

/* Navigation Buttons */
.slider-nav {
    position: absolute;
    top: 50%;
    left: 0;
    right: 0;
    display: flex;
    justify-content: space-between;
    transform: translateY(-50%);
    z-index: 10;
}

.prev-btn,
.next-btn {
    background-color: rgba(0, 0, 0, 0.3);
    color: white;
    padding: 1rem;
    border: none;
    font-size: 2rem;
    cursor: pointer;
    border-radius: 50%;
    transition: background-color 0.3s ease;
}

.prev-btn:hover,
.next-btn:hover {
    background-color: rgba(0, 0, 0, 0.6);
}

/* Slide Transition Animation */
@keyframes fade {
    0% {
        opacity: 0;
    }
    100% {
        opacity: 1;
    }
}

@media (max-width: 768px) {
    .container {
        width: 100%;
